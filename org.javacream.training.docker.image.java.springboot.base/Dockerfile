FROM openjdk:8-alpine
ENV JAVA_MAX_MEMORY 256M
ENV JAVA_INITIAL_MEMORY 256M
ENV JAVA_NEW_MEMORY 128M
ENV JAVA_OPTS ""
ENV JAVA_LIB_DIR /java/lib
RUN mkdir -p ${JAVA_LIB_DIR}
ENTRYPOINT java ${JAVA_OPTS} -Xmx${JAVA_MAX_MEMORY} -Xmn${JAVA_NEW_MEMORY} -Xms${JAVA_INITIAL_MEMORY} -jar ${JAVA_LIB_DIR}/app.jar  
